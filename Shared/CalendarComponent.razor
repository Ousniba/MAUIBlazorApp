@using BootstrapBlazor.Components


<DatePickerBody 
    @bind-Value="Value" 
    OnConfirm="@NormalOnConfirm" 
    ShowFooter="false" 
    ShowLunar="_showLunar" 
    ShowSolarTerm="_showSolarTerm" 
    ShowFestivals="_showFestivals" 
    ShowHolidays="_showHolidays" />
@* <Calendar ValueChanged="@OnValueChanged" /> *@
<BootstrapInput PlaceHolder="请输入 ..."
                @bind-Value="@msg" />

@code {
    private string msg { get; set; } = "";
    private DateTime Value { get; set; } = DateTime.Today;

    private Task NormalOnConfirm()
    {
        msg = $"{Value:yyyy-MM-dd}";
        return Task.CompletedTask;
    }

    private void OnValueChanged(DateTime ts)
    {
        msg = $"{ts:yyyy-MM-dd}";
    }
    private bool _showLunar = false;
    private bool _showSolarTerm = false;
    private bool _showFestivals = false;
    private bool _showHolidays = false;
}
